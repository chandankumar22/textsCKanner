<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/text_bottom_default_mg</item>
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:letterSpacing">0.09</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/shape_bottom_round_inverse</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/toolbar_start_end_pd</item>
        <item name="android:paddingEnd">@dimen/toolbar_start_end_pd</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

</resources>